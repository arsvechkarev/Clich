<?xml version="1.0" encoding="utf-8"?>
<resources>

  <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
    <item name="android:windowLightStatusBar">true</item>
    <item name="colorPrimary">?theColorPrimary</item>
    <item name="colorAccent">?theColorAccent</item>
    <item name="colorPrimaryDark">?theColorPrimaryDark</item>
    <!--  Floating action button  -->
    <item name="colorSecondary">?theColorSecondary</item>
    <!--  Ripple on items -->
    <item name="colorControlHighlight">?theColorControlHighlight</item>
    <!--  Toolbar hamburger menu  -->
    <item name="colorControlNormal">?theColorControlNormal</item>
    <!--  Floating action button text -->
    <item name="colorOnSecondary">?theColorOnSecondary</item>
  </style>

  <style name="AppTheme.Light">
    <item name="theColorPrimary">@color/light_colorPrimary</item>
    <item name="theColorAccent">@color/light_colorAccent</item>
    <item name="theColorPrimaryDark">@color/light_colorWindowBackground</item>
    <item name="theColorSecondary">@color/light_colorSecondary</item>
    <item name="theColorOnSecondary">@color/light_colorOnSecondary</item>
    <item name="theColorControlHighlight">@color/light_colorControlHighlight</item>
    <item name="theColorControlNormal">@color/light_colorControlNormal</item>
    <item name="colorWindowBackground">@color/light_colorWindowBackground</item>
    <item name="colorTextPrimary">@color/light_colorTextPrimary</item>
    <item name="colorTextSecondary">@color/light_colorTextSecondary</item>
    <item name="colorTextEditTextHint">@color/light_colorTextEditTextHint</item>
    <item name="colorTextOnButton">@color/light_colorTextOnButton</item>
    <item name="colorDivider">@color/light_colorDivider</item>
    <item name="colorToolbar">@color/light_colorToolbar</item>
    <item name="colorIcon">@color/light_colorIcon</item>
    <item name="colorItem">@color/light_colorItem</item>
    <item name="colorRippleDark">@color/light_colorRippleDark</item>
    <item name="colorRippleLight">@color/light_colorRippleLight</item>
  </style>
</resources>