<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">

  <ImageView
    android:id="@+id/imageStart"
    android:layout_width="@dimen/item_label_image_size"
    android:layout_height="@dimen/item_label_image_size"
    android:layout_margin="@dimen/item_label_margin_default"
    android:src="@drawable/ic_label"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

  <EditText
    android:id="@+id/editTextLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_label_margin_text_start"
    android:layout_marginTop="@dimen/item_label_margin_default"
    android:layout_marginBottom="@dimen/item_label_margin_default"
    android:hint="Label name long btw"
    android:textColor="?colorTextPrimary"
    android:visibility="invisible"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/imageStart"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/textLabel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/item_label_margin_text_start"
    android:layout_marginTop="@dimen/item_label_margin_default"
    android:layout_marginBottom="@dimen/item_label_margin_default"
    android:fontFamily="@font/metropolis_semi_bold"
    android:text="Label name long btw"
    android:textColor="?colorTextPrimary"
    android:textSize="@dimen/text_h4"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toEndOf="@id/imageStart"
    app:layout_constraintTop_toTopOf="parent"/>

  <ImageView
    android:id="@+id/imageEnd"
    android:layout_width="@dimen/item_label_image_size"
    android:layout_height="@dimen/item_label_image_size"
    android:layout_margin="@dimen/item_label_margin_default"
    android:background="?selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true"
    android:src="@drawable/ic_edit"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>